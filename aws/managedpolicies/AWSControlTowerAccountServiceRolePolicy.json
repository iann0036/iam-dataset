          "Null": {
            "events:detail-type": "false"
          },
          "StringEquals": {
            "events:ManagedBy": "controltower.amazonaws.com"
          }
        },
        "Effect": "Allow",
        "Resource": "arn:aws:events:*:*:rule/*ControlTower*",
        "Sid": "AllowPutRuleOnSpecificSourcesAndDetailTypes"
      },
      {
